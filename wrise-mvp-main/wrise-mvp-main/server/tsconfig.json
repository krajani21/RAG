{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./types"],
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node", "express", "express-fileupload"]
      
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  